<?xml version="1.0" encoding="UTF-8"?>
<!-- configuration file for LogBack (slf4J implementation)
See here for more details: http://gordondickens.com/wordpress/2013/03/27/sawing-through-the-java-loggers/ -->
<configuration scan="true" scanPeriod="30 seconds">

    <!--  There are default configs. Hence commented-->
    <!--
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>
    <jmxConfigurator/>
     -->
    
    <!-- Get the required properties like Log path etc from this file -->
    <!--  <property resource="vbvtestsuite-config.properties" />  -->

	<!-- This is the console logger -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- This is the Application logger -->
     <appender name="TESTSUITE_APPLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>C:\VbVTestSuite2\junitlogs\vbvtestsuite.log</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	      	<!-- daily rollover -->
			<fileNamePattern>C:\VbVTestSuite2\junitlogs\vbvtestsuite.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP"> 
	                <maxFileSize>10MB</maxFileSize> 
	        </timeBasedFileNamingAndTriggeringPolicy> 
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
	    </rollingPolicy>
	    <encoder>
	      <pattern>%date %level [%thread] %logger{10} - %msg%n</pattern>
	    </encoder>
  	</appender>
   
   <!-- This is the Application Error logger -->
   <appender name="TESTSUITE_APPERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>C:\VbVTestSuite2\junitlogs\vbvtestsuite_error.log</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	      	<!-- daily rollover -->
			<fileNamePattern>C:\VbVTestSuite2\junitlogs\vbvtestsuite_error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP"> 
	                <maxFileSize>10MB</maxFileSize> 
	        </timeBasedFileNamingAndTriggeringPolicy> 
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
	    </rollingPolicy>
	    <encoder>
	      <pattern>%date %level [%thread] %logger{10} - %msg%n%ex{15}</pattern>
	    </encoder>
  	</appender>
  	
  	 <!-- This is the root logger -->
  	<root level="info">
        <appender-ref ref="console"/>
    </root>

    <!-- This appender is for async logging for console logs -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
    	<discardingThreshold>0</discardingThreshold>
    	<appender-ref ref="console" />
  	</appender>
  	
  	<!-- This appender is for async logging for application logs -->
    <appender name="ASYNC-APPLOG" class="ch.qos.logback.classic.AsyncAppender">
    	<discardingThreshold>0</discardingThreshold>
    	<appender-ref ref="TESTSUITE_APPLOG" />
  	</appender>
  	
  	<!-- This appender is for async logging for application error logs -->
    <appender name="ASYNC-ERROR" class="ch.qos.logback.classic.AsyncAppender">
    	<discardingThreshold>0</discardingThreshold>
    	<appender-ref ref="TESTSUITE_APPERROR_LOG" />
    	<!-- Added to get the errors in console too. Need to remove later -->
    	<appender-ref ref="console"/>
  	</appender>
       
    
    <!-- Loggers -->
	<!-- Application logger. Make it ERROR by default. In DEV and QA replace the file file manually -->
	<logger name="com.visa" additivity="false">
		<level value="DEBUG"/>
    	<appender-ref ref="ASYNC-APPLOG" />
  	</logger>
  	
  	<logger name="org.springframework.test" additivity="false">
		<level value="DEBUG"/>
    	<appender-ref ref="ASYNC-APPLOG" />
  	</logger>
  	
  	
     <!-- Logger for Errors-->
     <logger name="com.visa.vbv.testsuite.error" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
     
     <!-- These actionable / performance loggers are yet to be defined. As of now using ASYNC-ERROR  -->
      <!-- Logger for Actionable events-->
     <logger name="com.visa.vbv.testsuite.actionable" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" /> 
          <!--  <appender-ref ref="ASYNC-ACTIONABLE_EVENTS" />  -->
     </logger> 
     
      <!-- Logger for Performance-->
	 <logger name="com.visa.vbv.testsuite.performance" additivity="false">
          <level value="INFO"/>
          <appender-ref ref="ASYNC-ERROR" /> 
          <!-- <appender-ref ref="ASYNC-PERFORMANCE-LOGS" />  -->
     </logger>
     <!-- Logger for Hibernate Prepared statment-->
	 <logger name="org.hibernate.ps.PreparedStatementCache" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
      <!-- Logger for Hibernate SQL-->
	 <logger name="org.hibernate.SQL" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
      <!-- Logger for Hibernate-->
	 <logger name="org.hibernate" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
      <!-- Logger for Spring framework-->
	 <logger name="org.springframework" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
      <!-- Logger for Spring modules-->
	 <logger name="org.springmodules" additivity="false">
          <level value="ERROR"/>
          <appender-ref ref="ASYNC-ERROR" />
     </logger>
    
    
    
</configuration>
